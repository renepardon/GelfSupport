{
    "name": "renepardon/gelf-support",
    "type": "library",
    "description": "A composer compliant package to support GELF logging within laravel/symfony projects",
    "keywords": [
        "renepardon",
        "gelf-support"
    ],
    "homepage": "https://github.com/renepardon/gelf-support",
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph, Ren√© Pardon",
            "email": "rene.pardon@boonweb.de",
            "homepage": "http://www.renepardon.de",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "renepardon\\gelf-support\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "renepardon\\gelf-support\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
